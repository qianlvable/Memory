<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="330dp"
        android:layout_height="460dp"
        card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:background="#fff"

        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <ImageView
            android:id="@+id/test_img"
            android:background="@drawable/card_inner_bg"
            android:layout_width="match_parent"
            android:layout_height="235dp" />
        <ImageView
            android:id="@+id/user_avator"
            android:src="@drawable/wenqi_icon"
            android:layout_centerInParent="true"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <TextView
            android:id="@+id/user_name"
            android:text="詹文琦  · Jennifer"
            android:layout_below="@id/user_avator"
            android:layout_marginTop="15dp"
            android:textSize="17sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="15dp"
            android:text="      “我和你就像两个小孩，围着一个神秘的果酱罐头，一点一点的尝它，看看里面到底有多甜。” "
            android:layout_below="@id/user_name"
            android:lineSpacingExtra="5dp"
            android:id="@+id/user_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
   </android.support.v7.widget.CardView>

</FrameLayout>
