<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.towenqi.qianlv.memory.WelcomeActivity">
    <com.towenqi.qianlv.memory.UI.RealHorizontalScrollView
        android:id="@+id/scrollable_background"
        app:src="@drawable/scroll_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.towenqi.qianlv.memory.UI.RealViewPager
        android:id="@+id/welcome_pager"
        app:parallaxVelocity="0.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
